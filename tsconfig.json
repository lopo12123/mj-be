{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext"
        ],
        "skipLibCheck": true,
        "baseUrl": "."
    },
    "include": [
        "src/merge.d.ts",
        "src/**/*.ts",
        "src/**/*.d.ts"
    ]
}
